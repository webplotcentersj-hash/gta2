---
import Layout from "@/layouts/Layout.astro"

import HeroKeyLogo from "@/assets/hero-key-logo.webp"
import HeroKeyBackground from "@/assets/hero-key-background.webp"
import LogoVI from "@/assets/logo-vi.svg"
import PlayButtonIcon from "@/assets/play-button.svg"
import LogoCutted from "@/assets/logo-cutted.svg"
---

<Layout>
  <div id="logo-mask" class="fixed top-0 w-full h-screen">
    <section>
      <picture
        id="hero-key"
        class="h-screen scale-110 sm:scale-115 md:scale-125 block overflow-hidden fixed"
      >
        <img
          id="hero-key-logo"
          src={HeroKeyLogo.src}
          alt=""
          loading="eager"
          class="absolute w-full h-full object-cover"
        />
        <img
          id="hero-key-background"
          src={HeroKeyBackground.src}
          alt=""
          loading="eager"
          class="w-full h-full object-cover"
        />
      </picture>
    </section>
  </div>

  <div
    class="fixed flex flex-col items-center justify-between h-screen px-4 sm:px-8 md:px-20 py-8 sm:py-12 md:py-16 w-full"
  >
    <header class="flex justify-between w-full">
      <LogoVI
        class="size-8 sm:size-10 md:size-11 text-white hover:text-yellow-100 transition-colors duration-500 cursor-pointer"
      />
    </header>

    <button class="absolute inset-0 m-auto cursor-pointer inline-block">
      <PlayButtonIcon
        id="hero-play-button"
        class="text-white m-auto size-20 sm:size-24 md:size-32 mt-10 backdrop-blur-3xl rounded-full hover:scale-110 transition-transform duration-500"
      />
    </button>

    <footer id="hero-footer" class="absolute bottom-4 sm:bottom-6 md:bottom-8 m-auto">
      <LogoCutted
        class="text-white w-24 sm:w-32 md:w-38 drop-shadow-[0_0_2px_rgba(255,255,255,.5),0_0_8px_#000]"
      />
      <span
        class="absolute uppercase tracking-[3px] sm:tracking-[4px] md:tracking-[6px] whitespace-nowrap text-center top-[35px] sm:top-[42px] md:top-[49px] font-medium text-shadow-[0_0_2px_rgba(255,255,255,.5),0_0_8px_#000] left-1/2 -translate-x-1/2 text-sm sm:text-base md:text-lg"
      >
        Ver el Tr치iler 2
      </span>
    </footer>
  </div>
</Layout>

<style>
  #logo-mask {
    background: white;
    mask-image: url("/logo-stack.svg");
    mask-position: center 25%;
    mask-repeat: no-repeat;
    mask-size: clamp(5000vh, 3500%, 0vh);
    -webkit-mask-image: url("/logo-stack.svg");
    -webkit-mask-position: center 25%;
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-size: clamp(5000vh, 3500%, 0vh);
  }

  @media (max-width: 768px) {
    #logo-mask {
      mask-size: clamp(3000vh, 2500%, 0vh);
      -webkit-mask-size: clamp(3000vh, 2500%, 0vh);
    }
  }
</style>

<script>
  import { gsap } from "gsap"
  import { ScrollTrigger } from "gsap/ScrollTrigger"

  gsap.registerPlugin(ScrollTrigger)

  // Optimizaci칩n para m칩vil: reducir animaciones si es dispositivo m칩vil
  const isMobile = typeof window !== "undefined" && window.innerWidth <= 768
  const scrubValue = isMobile ? 0.5 : 1

  const tl = gsap.timeline({
    ease: "power2.out",
    scrollTrigger: {
      scrub: scrubValue,
      start: "top top",
      end: "bottom top",
    },
  })

  tl.to("#hero-key", { duration: 1, scale: 1 })
    .to("#hero-key-logo", { opacity: 0 }, "<")
    .to("#hero-footer", { opacity: 0 }, "<")
    .to("#hero-play-button", { opacity: 0 }, "<")
    .to(
      "#logo-mask",
      {
        maskSize: isMobile ? "clamp(15vh, 20%, 25vh)" : "clamp(20vh, 25%, 30vh)",
      },
      0.15
    )
    .to(
      "#hero-key",
      {
        opacity: 0,
        duration: 0.2,
      },
      0.4
    )
</script>
